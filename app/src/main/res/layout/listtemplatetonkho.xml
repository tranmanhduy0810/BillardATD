<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/TenMon"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:hint="Tên Món:"
            android:padding="20dp"
            android:textColor="#252525"
            android:textSize="25dp"/>
        <TextView
            android:layout_below="@id/TenMon"
            android:id="@+id/SoLuong"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:hint="Số Lượng:"
            android:layout_marginLeft="40dp"
            android:textColor="#5F7D8A"
            android:textSize="25dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/Price"
            android:id="@+id/NgayNhap"
            android:hint="Ngày Nhập:"
            android:singleLine="true"
            android:layout_marginLeft="40dp"
            android:textSize="20dp"
            android:textColor="#81C784"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/SoLuong"
            android:id="@+id/Price"
            android:hint="Giá Thành:"
            android:layout_marginLeft="40dp"
            android:textSize="20dp"
            android:textColor="#444944"/>
    </RelativeLayout>



</RelativeLayout>