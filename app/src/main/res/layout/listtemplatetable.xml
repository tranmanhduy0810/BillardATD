<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="15dp">
    <LinearLayout
        android:id="@+id/Layout_Tenban"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/Name_Table1"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:paddingRight="20dp"
            android:layout_marginLeft="35dp"
            android:src="@drawable/table">
        </ImageView>
        <TextView
            android:id="@+id/Name_Table"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tên Bàn"
            android:fontFamily="@font/segoe_ui_bold"
            android:textSize="25dp"
            android:layout_gravity="center"/>
    </LinearLayout>

    <TableLayout
        android:layout_below="@id/Layout_Tenban"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/ON">

    <!-- Table Heading -->

    <TableRow
        android:background="@color/BACKGROUNDTABLE">

    <TextView
        android:id="@+id/ID_Table"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="ID:"
        android:textColor="@android:color/black"
        android:padding="10sp"
        android:background="@drawable/table_border"
        android:textSize="20sp"
        android:layout_weight="3"
        android:gravity="center_horizontal"
        />
    <TextView
        android:id="@+id/LoaiBan"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Loại Bàn:"
        android:textColor="@android:color/white"
        android:padding="10sp"
        android:fontFamily="@font/roboto_medium"
        android:textSize="20sp"
        android:layout_weight="4"
        android:gravity="center_horizontal"
        />


    <TextView
        android:id="@+id/Status_Table"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Trạng Thái"
        android:fontFamily="@font/roboto_bold"
        android:textColor="@android:color/white"
        android:padding="10sp"
        android:textSize="20dp"
        android:layout_weight="4"
        android:gravity="center_horizontal"
        />
    </TableRow>

    </TableLayout>


</RelativeLayout>